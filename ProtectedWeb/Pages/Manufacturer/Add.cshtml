@page
@model ProtectedWeb.Pages.Manufacturer.AddModel
@{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="mb-4">Добавление производителя</h2>
                <form method="post" id="editManufacturerForm" asp-anti-forgery="true">
                    <div class="form-group">
                        <label for="Name">Название:</label>
                        <input type="text" class="form-control" id="Name" asp-for="Name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </form>
            </div>
        </div>
    </div>
}
